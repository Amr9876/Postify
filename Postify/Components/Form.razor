
@if(FormType == FormType.Login)
{
    <EditForm Model="loginRequest" OnValidSubmit="LoginHandler">

        <DataAnnotationsValidator />

        <div class="mb-3">

            <div class="d-flex justify-content-start">
                <label class="form-label">Email Address</label>
            </div>

            <InputText @bind-Value="loginRequest.Email" class="form-control" />

            <div class="mt-3 d-flex justify-content-start">
                <ValidationMessage For="() => loginRequest.Email" />
            </div>

        </div>

        <div class="mb-3">

            <div class="d-flex justify-content-start">
                <label class="form-label">Password</label>
            </div>

            <InputText type="password" @bind-Value="loginRequest.Password" class="form-control" />

            <div class="mt-3 d-flex justify-content-start">
                <ValidationMessage For="() => loginRequest.Password" />
            </div>

        </div>

        <div class="d-flex justify-content-start mt-3 mb-3">
            <a href="/signup">Dont Have Account?</a>
        </div>

        @if(!string.IsNullOrEmpty(errorMessage))
        {
            <p class="mb-3 text-danger">@errorMessage</p>
        }

        <div class="d-flex justify-content-start mb-3">
            <button type="submit" class="btn btn-outline-primary">SUBMIT</button>
        </div>

    </EditForm>
}

